@model MedicamentApp.ViewModels.AddEmployeesViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Добавить сотрудника</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-image: url('/images/4.jpg'); 
            background-size: cover;
            background-position: center;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        h2 {
            color: #EFA94A; 
            text-align: center;
            margin-bottom: 20px;
            font-family: 'Arial Black', sans-serif;
        }

        .form-container {
            background: rgba(255, 255, 255, 0.9);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            max-width: 500px;
            width: 100%;
        }

            .form-container div {
                margin-bottom: 15px;
            }

        label {
            display: block;
            margin-bottom: 5px;
            color: #333;
            font-weight: bold;
        }

        input[type="text"], input[type="number"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .btn-primary {
            display: block;
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 5px;
            background-color: #EFA94A; 
            color: #fff;
            cursor: pointer;
            font-size: 16px;
            font-family: 'Arial Black', sans-serif;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

            .btn-primary:hover {
                background-color: #FFDB8B;
            }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.3s ease;
            margin-top: 20px;
            text-align: center;
            width: 100%;
            font-family: 'Arial Black', sans-serif;
            box-sizing: border-box;
        }

            .btn-secondary:hover {
                background-color: #495057;
            }

        .validation-message {
            color: #EFA94A; 
            font-size: 12px;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Добавление сотрудников</h2>
        <form asp-action="AddEmployees" method="post">
            @Html.AntiForgeryToken()
            <div>
                <label asp-for="Идентификатор">Идентификатор</label>
                <input asp-for="Идентификатор" />
                <span class="validation-message" asp-validation-for="Идентификатор"></span>
            </div>
            <div>
                <label asp-for="ФИО">ФИО</label>
                <input asp-for="ФИО" />
                <span class="validation-message" asp-validation-for="ФИО"></span>
            </div>
            <div>
                <label asp-for="Должность">Должность</label>
                <input asp-for="Должность" />
                <span class="validation-message" asp-validation-for="Должность"></span>
            </div>
            <div>
                <label asp-for="Код_роли">Код роли</label>
                <input asp-for="Код_роли" />
                <span class="validation-message" asp-validation-for="Код_роли"></span>
            </div>
            <button type="submit" class="btn-primary">Добавить</button>
        </form>
        <a href="/MenuPharmacists" class="btn-secondary">Вернуться в меню для фармацевтов</a>
    </div>
    <p>
        <a href="/Employees" class="btn btn-secondary">Перейти в раздел с информацией о сотрудниках</a>
    </p>

</body>
</html>
