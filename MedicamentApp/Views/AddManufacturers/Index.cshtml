@model MedicamentApp.ViewModels.AddManufacturersViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Добавить производителя</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('/images/9.jpg');
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        h2 {
            color: #222; 
            text-align: center;
            margin-bottom: 20px;
            font-family: Arial, sans-serif;
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        form {
            background-color: #EFA94A; 
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: #333;
            font-weight: bold;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        button[type="submit"] {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 5px;
            background-color: #FFCF48; 
            color: #fff;
            cursor: pointer;
            font-size: 16px;
            font-family: Arial, sans-serif;
            transition: background-color 0.3s ease;
        }

            button[type="submit"]:hover {
                background-color: #F0DC82; 
            }

        a {
            display: block;
            text-align: center;
            margin-top: 20px;
            text-decoration: none;
            font-size: 18px;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
            background-color: #FFCF48; 
            color: #fff;
        }
    </style>
</head>
<body>
    <h2>Добавление производителей</h2>
    <form asp-action="Index" method="post">
        <div>
            <label asp-for="Идентификатор">Идентификатор</label>
            <input asp-for="Идентификатор" />
            <span asp-validation-for="Идентификатор"></span>
        </div>
        <div>
            <label asp-for="Название">Название</label>
            <input asp-for="Название" />
            <span asp-validation-for="Название"></span>
        </div>
        <div>
            <label asp-for="Адрес">Адрес</label>
            <input asp-for="Адрес" />
            <span asp-validation-for="Адрес"></span>
        </div>
        <div>
            <label asp-for="Контактный_телефон">Контактный телефон</label>
            <input asp-for="Контактный_телефон" />
            <span asp-validation-for="Контактный_телефон"></span>
        </div>
        <button type="submit">Добавить</button>
    </form>
    <a href="/MenuPharmacists" class="btn-secondary">Вернуться в меню для фармацевтов</a>
</body>
</html>
