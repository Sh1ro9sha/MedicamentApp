@model IEnumerable<MedicamentApp.ViewModels.DeleteProfitViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>Удаление доходов</title>
    <style>
        body {
            font-family: 'Anonymous Pro', monospace;
            background: linear-gradient(to bottom right, #30292f, #583b63, #7b4b8b); /* Темный пастельный градиент */
            margin: 0;
            padding: 0;
            color: #fff; /* Белый текст */
        }

        h2 {
            text-align: center;
            color: #7FC7FF; /* Голубой цвет */
            margin-top: 0;
        }

        .table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            border-radius: 10px;
            overflow: hidden;
            background-color: #7FC7FF; /* Голубой цвет */
        }

        th, td {
            padding: 10px;
            border: 1px solid #fff;
            text-align: center;
        }

        th {
            background-color: #777; /* Еще темнее серый для заголовков таблицы */
        }

        td {
            background-color: #999; /* Серый для ячеек таблицы */
        }

            td:hover {
                background-color: #CCC; /* Светло-серый при наведении на ячейку */
            }

        .no-products {
            text-align: center;
            margin-top: 20px;
        }

        .no-points {
            text-align: center;
            margin-top: 20px;
            color: #fff;
        }

        .return-button {
            display: block;
            width: 150px;
            margin: 20px auto;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #555;
            color: #fff;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .return-button:hover {
                background-color: #777;
            }

        .delete-button {
            display: inline-block;
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            background-color: #7FC7FF;
            color: #30292f; 
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .delete-button:hover {
                background-color: #583b63; 
                color: #fff;
            }

        .btn.btn-secondary {
            background-color: #6c757d; 
            color: #fff; 
            border: none; 
            padding: 10px 20px; 
            border-radius: 5px;
            text-decoration: none;
            display: inline-block; 
            transition: background-color 0.3s ease; 
            margin-top: 5px;
        }

            .btn.btn-secondary:hover {
                background-color: #495057; 
            }
    </style>
</head>
<body>
    <h2>Удаление доходов</h2>

    <table>
        <thead>
            <tr>
                <th>Идентификатор</th>
                <th>Идентификатор лекарства</th>
                <th>Наименование лекарства</th>
                <th>Дата поступления</th>
                <th>Количество</th>
                <th>Поставщик</th>
                <th>Цена закупки</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var profit in Model)
            {
                <tr>
                    <td>@profit.Идентификатор</td>
                    <td>@profit.Идентификатор_лекарства</td>
                    <td>@profit.Наименование_лекарства</td>
                    <td>@profit.Дата_поступления.ToString("dd.MM.yyyy")</td>
                    <td>@profit.Количество</td>
                    <td>@profit.Поставщик</td>
                    <td>@profit.Цена_закупки.ToString("C")</td>
                    <td>
                        <form asp-controller="DeleteProfit" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@profit.Идентификатор" />
                            <button type="submit" class="delete-button">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/MenuPharmacists" class="btn-secondary">Вернуться в меню для фармацевтов</a>
</body>
</html>
