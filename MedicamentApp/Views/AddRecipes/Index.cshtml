@model MedicamentApp.ViewModels.AddRecipesViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Добавить рецепт</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to bottom right, #FFD700, #FFA500);
            color: #3D315B; 
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            max-width: 400px;
            width: 100%;
        }

        h2 {
            color: #FFA500; 
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px; 
            font-weight: bold; 
        }

        label {
            display: block;
            margin-bottom: 10px;
            color: #3D315B; 
            font-weight: bold; 
        }

        input[type="text"],
        input[type="date"] {
            width: 100%;
            padding: 12px;
            border: 2px solid #3D315B; 
            border-radius: 8px;
            box-sizing: border-box;
            margin-bottom: 15px;
            background-color: #FFD700; 
            color: #3D315B; 
            font-size: 18px; 
            font-weight: bold; 
        }

        button[type="submit"] {
            width: 100%;
            padding: 15px;
            border: none;
            border-radius: 8px;
            background-color: #FFA500; 
            color: #3D315B; 
            cursor: pointer;
            font-size: 20px; 
            font-weight: bold; 
            transition: background-color 0.3s ease;
        }

            button[type="submit"]:hover {
                background-color: #FFD700; 
            }

        .btn-secondary {
            display: block;
            text-align: center;
            margin-top: 20px;
            color: #FFA500; 
            text-decoration: none;
            font-size: 20px; 
            font-weight: bold;
            background-color: #3D315B; 
            padding: 15px 30px; 
            border-radius: 8px; 
            transition: background-color 0.3s ease; 
        }

            .btn-secondary:hover {
                background-color: #6c757d; 
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Добавление рецептов</h2>
        <form asp-action="Index" method="post">
            <div>
                <label asp-for="Идентификатор">Идентификатор</label>
                <input asp-for="Идентификатор" />
                <span asp-validation-for="Идентификатор"></span>
            </div>
            <div>
                <label asp-for="Дата_назначения">Дата назначения</label>
                <input asp-for="Дата_назначения" type="date" />
                <span asp-validation-for="Дата_назначения"></span>
            </div>
            <div>
                <label asp-for="Идентификатор_лекарства">Идентификатор лекарства</label>
                <input asp-for="Идентификатор_лекарства" />
                <span asp-validation-for="Идентификатор_лекарства"></span>
            </div>
            <div>
                <label asp-for="ФИО_лечащего_врача">ФИО лечащего врача</label>
                <input asp-for="ФИО_лечащего_врача" />
                <span asp-validation-for="ФИО_лечащего_врача"></span>
            </div>
            <div>
                <label asp-for="Адрес_больницы">Адрес больницы</label>
                <input asp-for="Адрес_больницы" />
                <span asp-validation-for="Адрес_больницы"></span>
            </div>
            <button type="submit" class="btn-primary">Добавить</button>
        </form>
        <a href="/MenuPharmacists" class="btn-secondary">Вернуться в меню для фармацевтов</a>
    </div>
</body>
</html>
