@model MedicamentApp.ViewModels.AddPharmacistsViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Добавить фармацевта</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('/images/8.jpg'); 
            background-size: cover;
            background-position: center;
            color: #333; 
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        h2 {
            color: #9ACEEB; 
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            background-color: #FFCF48; 
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: #333;
            font-weight: bold;
        }

        input[type="text"],
        input[type="date"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        button[type="submit"] {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 5px;
            background-color: #EFA94A; 
            color: #fff;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            button[type="submit"]:hover {
                background-color: #FF8C69; 
            }

        a.btn-secondary {
            display: block;
            text-align: center;
            margin-top: 20px;
            color: #333;
            text-decoration: none;
            font-size: 14px;
            background-color: #6c757d; 
            padding: 10px 20px; 
            border-radius: 5px; 
            transition: background-color 0.3s ease; 
        }

            a.btn-secondary:hover {
                background-color: #495057; 
            }
    </style>
</head>
<body>
    <h2>Добавление фармацевтов</h2>
    <form asp-action="AddPharmacists" method="post">
        <div>
            <label asp-for="Идентификатор">Идентификатор</label>
            <input asp-for="Идентификатор" />
            <span asp-validation-for="Идентификатор"></span>
        </div>
        <div>
            <label asp-for="ФИО">ФИО</label>
            <input asp-for="ФИО" />
            <span asp-validation-for="ФИО"></span>
        </div>
        <div>
            <label asp-for="Дата_приема">Дата приема</label>
            <input asp-for="Дата_приема" type="date" />
            <span asp-validation-for="Дата_приема"></span>
        </div>
        <div>
            <label asp-for="Статус">Статус</label>
            <input asp-for="Статус" />
            <span asp-validation-for="Статус"></span>
        </div>
        <button type="submit" class="btn-primary">Добавить</button>
    </form>
    <a href="/MenuPharmacists" class="btn-secondary">Вернуться в меню для фармацевтов</a>
</body>
</html>
